/* 富文本编辑器样式回归 */
div.qeditor_preview ul, div.tfmt ul {
	margin-left:0px; padding-left:40px; list-style-position: outside;
	list-style:disc;
}
div.qeditor_preview ol, div.tfmt ol {
	margin-left:0px; padding-left:40px; list-style-position: outside;
	list-style:decimal;
}
div.qeditor_preview b, div.tfmt b, div.qeditor_preview strong, div.tfmt strong {
	font-weight:bold;
}
div.qeditor_preview u, div.tfmt u {
    text-decoration: underline;
}
div.qeditor_preview strike, div.tfmt strike {
    text-decoration: line-through;
}
div.qeditor_preview em, div.qeditor_preview i, div.tfmt em, div.tfmt i {
	font-style:italic;
	display:inline;
	font-size:12px;
	float:none;
}

