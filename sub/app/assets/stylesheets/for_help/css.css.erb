	line-height:0;
}
.borderLeftDot {
	border-left:1px dotted #cfcfcf;
}
.borderBottomDot {
	border-bottom:1px dotted #cfcfcf;
}

/* 行内小图标通用属性 */
.verifyLogoS, .modifyLogo, .questionLogo {
	background:url("<%=asset_path 'for_help/btn.png' %>") no-repeat;
	display:inline-block;
	vertical-align:-2px;
}
/* 行内 名字后面绿色V认证图标（小） */
.verifyLogoS {
	width:12px;
	height:12px;
	background-position:0 -50px;
}
/* 行内 修改灰色图标 */
.modifyLogo {
	width:10px;
	height:10px;
	background-position:-140px -52px;
	margin-right:5px;
}
/* 行内 绿色问号图标 */
.questionLogo {
	width:14px;
	height:14px;
	background-position:-432px 0;
	margin-left:5px;
}

.arrUp, .close,  .close_topic, .shuffle, .icoCorrect, .icoInCorrect{
	background:url("<%=asset_path 'for_help/btn.png' %>") no-repeat;
	position:absolute;
	display:block;
}
/* 问题页，评论框体，左上位置向上箭头 */
.arrUp {
	width:11px;
	height:6px;
	background-position:-432px -19px;
}
/* 叉子图标 */
.close,.close_topic {
	background-position:-210px -50px;
	width:11px;
	height:11px;
	position:absolute;
}
.close:hover {
	background-position:-244px -50px;
}
/* 换一换图标 */
.shuffle {
	background-position:-433px -29px;
	width:14px;
	height:14px;
	top:9px;
	right:0;
}
/* input框右侧出现的验证正确与否图标 */
.icoCorrect,.icoInCorrect {
	background-position:-405px -46px;
	width:14px;height:14px;
}
.icoInCorrect {
	background-position:-405px -61px;
}

/* hover后不显示底线链接的样式 */
#userInfoPop a, #mainNav a, .topicNav a:hover, .pager a, .hotTopicTable a {
	text-decoration:none;
}
/* 普通绿色、银色按钮 */
.btnNormalGreen, .btnNormalSilver {
	border:1px solid #8ac431 !important;
	float:left !important;
	cursor:pointer !important;
}
.btnNormalGreen span, .btnNormalSilver span {
	padding:3px 10px !important;
	border:1px solid #c6ef7d !important;
	background:url("<%=asset_path 'for_help/btn_bg.png' %>") repeat-x !important;
	line-height:1em !important;
	float:left !important;
	color:#447208 !important;
}
.btnNormalSilver {
	border-color:#e5e5e5 !important;
	font-size:12px !important;
}
.btnNormalSilver span {
	border-color:#fff !important;
	background-position:left bottom !important;
	color:#690 !important;
}
/* 所有头像图片包灰边 */
.imgHead {
	border:1px solid #ddd;
}

/* 翻页 */
.pager, .comments .pager {
	margin:10px 0;
	float:right;
}
.pager a, .comments .pager a {
	color:#690;
	font-family:arial,simsun;
}
.pager li, .hotTopicTable li, .comments .pager li {
	border:1px solid #e5e5e5;
	float:left;
	cursor:pointer;
	font-size:12px;
	margin-right:5px;
}
.pager li span, .hotTopicTable li span, .comments .pager li span {
	padding:4px 10px 2px;
	border:1px solid #fff;
	background:url("<%=asset_path 'for_help/btn_bg.png' %>") repeat-x 0 -30px;
	line-height:1em;
	float:left;
}
.pager li.more, .comments .pager li.more {
	border:none;
	cursor:auto;
}
.pager li.current, .pager li:hover, .hotTopicTable li:hover, .pager li .current, .comments .pager li .current {
	border-color:#8ac431;
}
.pager li.current span, .pager li .current, .hotTopicTable li:hover span, .comments .pager li.current span  {
	background-position:0 0;
	border:1px solid #c6ef7d;
}
.pager li.current a, .pager li .current a, .hotTopicTable li:hover a, .comments .pager li.current a {
	color:#447208;
}

