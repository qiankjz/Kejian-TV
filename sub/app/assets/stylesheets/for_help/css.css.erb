/* 通用定义部分 */
body {
    font:normal 14px/22px "Hiragino Sans GB",simsun;
    background: url("<%=asset_path 'for_help/container_bg.png' %>") repeat-x #f4fafd;
    color:#555;
	word-wrap:break-word; 
	word-break:break-all;
}
a, .details .summary a {
    color:#369;
    text-decoration: none;
}
a:hover {
    text-decoration: underline;
	cursor:pointer;
}
/* 弱连接颜色 */
a.weak {
	color:#7c987e;
}
button {
	background-color:transparent;
}
h2,h3 {
	color:#555;
	font-weight:bold;
	border-bottom:1px solid #cfcfcf;
	height:30px; line-height:30px;
	font-size:14px;
}
h2 {
	border:none;
}
/* 字号14，宽字体 */
h6 {
	font-weight:bold;
}
/* 强调文本 用于总结性普通文本，比如问题状态中存在 */
em {
	color:#5b5b5b;
}
mark {
	background:transparent;
	color:#900;
}
input,textarea {
	font-size:12px;
	color:#999;
	border:1px solid #ccc;
	padding:2px;
}
input:focus,textarea:focus {
	border-color:#84bd2f;
}
input.error {
	border-color:red;
	background-color:#ffe5e5;
}
/* 套label的input向下移动2个像素，与文本对齐 */
label input {
	vertical-align:-2px;
	margin-right:5px;
}
.summary,.details {
	color:#999;
	font-size:12px;
	font-weight:400;
}
.summary a {
	color:#7c98c3;
}
.fr {
