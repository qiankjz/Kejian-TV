/* 侧边栏 */
#sidebar {
    float:right;
    width:250px;
    height:100%;
}
#sidebar:first-child {
	margin-top:10px;
}
/* 右侧边栏 主导航 */
#mainNav {
	margin-top:20px;
}
#mainNav .block40 {
	height:40px;
}
#mainNav li {
    height:33px; line-height: 33px;
    padding-left:20px;
	margin-bottom:12px;
}
#mainNav li.current {
    background:url("<%=asset_path 'for_help/sidebar_bg.png' %>") -250px 0;
    color:#95d633;
}
#mainNav li.current:hover {
    background-position:-250px 0;
}
#mainNav li.current a {
	font-weight:bold;
}
#mainNav li:hover {
    background:url("<%=asset_path 'for_help/sidebar_bg.png' %>") -500px 0;    
    cursor:pointer;
}
#mainNav span {
    background:url("<%=asset_path 'for_help/iconset.png' %>") no-repeat;
    width:16px;
    height:18px;
    float:left;
    margin:7px 7px 0 0;
}
#mainNav span.homepage {
    background-position: -20px 0;
}
#mainNav span.followed {
    background-position: -20px -46px;
}
#mainNav span.recommended {
    background-position: -20px -90px;
}
#mainNav span.asks {
    background-position: -20px -136px;
}
#mainNav span.doing {
    background-position: -20px -180px;
}
#mainNav span.newbie {
    background-position: -20px -226px;
}
#mainNav .current span.homepage {
    background-position: 0 0;
}
#mainNav .current span.followed {
    background-position: 0 -46px;
}
#mainNav .current span.recommended {
    background-position: 0 -90px;
}
#mainNav .current span.asks {
    background-position: 0 -136px;
}
#mainNav .current span.doing {
    background-position: 0 -180px;
}
#mainNav .current span.newbie {
    background-position: 0 -226px;
}
#mainNav .current a {
    color:#9c3;
}
#mainNav .userNotify {
	display:inline;
	margin-left:5px;
}
/* 右侧边栏 主导航 End */


/* 右侧容器 */
.sideBox {
	margin:60px auto 0;
	width:210px;
	clear:both;
	font-size:12px;
}

/* 右侧边栏 关注按钮组 */
.sideBox .nBtn {
	float:right;
}

