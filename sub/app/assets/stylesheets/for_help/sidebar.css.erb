/* 23x23头像列表UL定义 */
.headList23 li {
	float:left;
	width:25px;
	height:25px;
	margin:10px 10px 0 0;
}


/* 相关专家、相关话题类型，带图片，带关注按钮，带链接，带说名字 */
.funcList li {
	height:50px;
	margin:20px 0;
	clear:both;
}
.funcList li:first-child {
	margin-top:10px;
}
.funcList figcaption {
	height:21px;
	overflow:hidden;
}
.funcList figure {
	float:left;
	margin-right:8px;
}
.funcList p {
	color:#777;
	height:25px;
	line-height:13px;
	margin-top:2px;
	padding-top:1px;
	overflow:hidden;
	width:150px;
	float:right;
}


/* 话题列表 */
.topicList li {
	height:43px;
	line-height:43px;
	border-bottom:1px dotted #cfcfcf;
}
.topicList em {
	float:left;
	width:140px;
	height:43px;
	overflow:hidden;
}
.topicList a {
	font-size:14px;
}
.topicList .nBtn {
	margin-top:10px;
}

/* 相关问题、纯文本链接列表样式 */
.linkList li {
	margin:5px 0 10px;
}
.linkList a {
	font-size:12px;
}


/* 分享问题 Email、转发地址 */
.shareEmail, .shareFw {
	background:url("<%=asset_path 'for_help/btn.png' %>") no-repeat -432px -45px;
	padding:0 20px;
}
.shareFw {
	background-position:-432px -69px;
}


/* 邀请他人回答问题 */
.peopleSearchBar {
	background-color:#fff;
	height:21px;
	border:1px solid #ccc;
}
.peopleSearchBar input {
	float:left;
	height:21px;
	line-height:21px;
	color:#999;
	margin-left:5px;
	width:170px;
	border:none;
	padding:0;
}
.peopleSearchBar button {
	width:25px;
	height:21px;
	float:right;
	background:url("<%=asset_path 'for_help/btn.png' %>") no-repeat -290px -46px;
}
.inviteList li {
	width:48px;
	height:31px;
	overflow:hidden;
	background-color:#fff;
	border:1px solid #e0e0e0;
	float:left;
	margin:5px 2px 0 0;
	position:relative;
}
.inviteList figure {
	margin:3px;
	float:left;
}
.inviteList .close {
	top:3px;
	right:3px;
}
.inviteList em {
	float:right;
	width:16px;
	text-align:center;
	line-height:1em;
	margin-top:17px;
}


/* 问道认证栏 */
.verifyLogo {
	text-indent:-9999px;
	background:url("<%=asset_path 'for_help/btn.png' %>") no-repeat -29px -52px;
	width:109px;
	height:33px;
}
.followInfo {
	border-bottom:1px solid #cfcfcf;
	padding:10px 0 5px;
}
.followInfo div {
	float:left;
	width:104px;
}
.followInfo em {
	font:bold 16px/1em "arial";
	color:#690;
}
.followInfo .borderLeftDot {
	padding-left:20px;
	width:84px;
}
.user-regdate {
	margin-top:5px;
}