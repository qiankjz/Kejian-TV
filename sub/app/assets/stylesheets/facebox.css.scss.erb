.__qa{

  /* facebox 专用 */
  #facebox {
  	position:absolute;
  	background-color:rgba(184, 193, 206, 0.5);
  	top:100px;
  	left:100px;
  }
  #facebox .popup {
  	margin:7px;
  	background-color:#FFF;
  	width:470px;
  	border:2px solid #ccc\0;
  }
  #facebox header {
  	background:url("<%=asset_path 'pop_header_bg.png' %>") repeat-x;
  	height:32px; line-height:32px;
  	border-bottom:1px solid #E4E4E4;
  	padding-left:10px;
  	font-size:14px;
  	font-weight:bold;
  }
  #facebox .close {
  	right:15px;
  	top:18px;
  }
  #facebox .editorBox {
  	background-color:#eee;
  }
  #facebox textarea{
  	width:428px;
  	padding: 6px 10px;
  	font-size:14px;
  }
  #facebox section {
  	background-color:#FFF;
  	margin:10px;
  }
  #facebox footer {
  	border-top:1px solid #E4E4E4;
  	height:66px;
  	background-color:#F6F6F6;
  	text-align:center;
  	padding-left:200px;
  }
  #facebox .goLog {
  	float:left;
  	font-size:12px;
  	text-align:left;
  	margin-left:5px;
  }

  #facebox .topicNav li {
  	margin-top:5px;
  }
  #facebox .addTopic input {
  	float:left;
  	margin-right:5px;
  }
  #facebox .form {
  	width:340px;
  	margin:30px auto;
  }
  #facebox dt {
  	float:left;
  	clear:right;
  	width:70px;
  	text-align:right;
  }
  #facebox dd {
  	float:right;
  	width:260px;
  	height:60px;
  }
  #facebox .form input {
  	width:230px;
  }
  #facebox dd img {
  	display:inline-block;
  	margin:5px 0 0 5px;
  }
  #facebox dd.clear {
  	height:1em !important;
  }
  #facebox .validTip {
  	font-size:12px;
  	color:red;
  }
  #facebox .rightbtn {
  	float:right !important;
  	margin-right:20px;
  }
  #facebox .share_panel {
  	margin:10px 0;
  	padding:5px;
  }
  #facebox .shareEmailTab dt {
  	float:left;
  	width:60px;
  	text-align:right;
  	height:50px;
  }
  #facebox .shareEmailTab dd {
  	float:left;
  	width:340px;
  	text-align:left;
  	height:50px;
  }
  
}
