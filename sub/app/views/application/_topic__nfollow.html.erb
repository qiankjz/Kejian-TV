<% if topic.respond_to?(:name)%>
  <% topic = topic.name%>
<%end%>
<% if current_user and current_user.topic_followed?(topic) %>
<a class="nBtn nBtnUnFocus" onclick="return Topics.unfollow(this, '<%= topic %>','small');"></a>
<% else %>
<a class="nBtn nBtnFocus" onclick="return Topics.follow(this, '<%= topic %>','small');"></a>
<% end %>
