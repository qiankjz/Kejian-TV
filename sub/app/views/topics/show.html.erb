    });

    jQuery('#__w2_qT1rmRt_inline_editor_submit').click(function() {
      return jQuery.post("/topics/" + KTV.data.topic_id + "/update_title", {
        name: jQuery('#__w2_qT1rmRt_topic_name_edit').val()
