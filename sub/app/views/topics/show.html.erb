          return jQuery('.topic_remove').click(KTV.topic_remove);
        }
      });
    });

    jQuery('.topic_remove').click(KTV.topic_remove);

    jQuery('#the_done_editing_topics').click(function() {
      jQuery('#__w2_P47vozg_inline_editor_link').show();
      jQuery('#the_question_topic_selector').hide();
      return jQuery('.topic_remove').hide();
