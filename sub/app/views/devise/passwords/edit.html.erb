<% content_for :title do %>忘记密码<% end %>
<%= image_tag 'ie/ktv_forget.png',:class => 'ktvregh2', :alt => '忘记密码' %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , :id=>'submit_btn_form',:class=>'normal' }) do |f| %>

  <%# devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password,'新密码' %><div class="field_error" id="error_password"><%= resource.errors_for_field(:password) %></div><br class="clear">
    <%= f.password_field :password,:class => 's462',:tabindex => 1 %>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation,'新密码确认' %><div class="field_error" id="error_password_confirmation"><%= resource.errors_for_field(:password_confirmation) %></div><br class="clear">
    <%= f.password_field :password_confirmation,:class => 's462',:tabindex => 1 %>
  </div>

  <div class="clearfix" style="margin-top:20px;padding-bottom:8px">
    <div class="field fl">
      <a href="javascript:void(0)" class="btn btn210 submit_btns" id="submit_btn">提交新密码</a>
    </div>
    <div class="field fr">
      <a href="<%=cancel_href%>" class="btn btn210_grey">取消</a>
    </div>
  </div>



<% end %>