<div class="__sdk">
  <div id="content">
    <% content_for :butt2 do %>
      window.psvr_f=<%= Ktv::Utils.safely('undefined'){ret=@c.fid;if ret.present?;ret;else;raise 'bitch!';end} %>;
      window.psvr_g=<%= Ktv::Utils.safely('undefined'){ret=Department.get_fid(@c.department);if ret.present?;ret;else;raise 'bitch!';end}%>;
      $('#content').click(function(){$('#presentation_teacher_select').hide();$('#presentation_teacher_hv').removeClass('right_on');$('#presentation_sort1_select').hide();$('#presentation_sort1_hv').removeClass('right_on');});
      $('#presentation_topic').focus(function(e){
        showWindow('nav', '/simple/forum.php?mod=misc&action=nav&already_inside=1&psvr_g='+window.psvr_g+'&psvr_f='+window.psvr_f, 'get', 0);
        return false;
      });
    <% end %>
    
  <%= form_for @courseware,:url => "/presentations", :html => { :method => :post,'data-s3' =>@config.to_json,  :class => 'new_presentation', :id=>'upload_presentation', :autocomplete=>"off" } do |f| %>
    <input id="presentation_uptime" name="presentation[uptime]" type="hidden" value="<%=@uptime%>" />
    <section id="presentation" class="supplimental">
      <div class="wrapper">
        <div class="primary_info" id="biaozhu_cw" style="">
          <!-- display:none -->
          <h1>标注课件信息</h1>
          <input type="hidden" name="psvr_g" value="<%= params[:psvr_g] %>" id="psvr_g">
          <input type="hidden" name="psvr_f" value="<%= params[:psvr_f] %>" id="psvr_f">

  <p><label for="presentation_topic">学院与课程名</label><br />
     <input class="text" id="presentation_topic" name="presentation[topic]" size="30" type="text" placeholder="" value="<%if @c%><%= @c.department %>: <%= @c.name %> <%end %>" readonly="readonly" /></p>
  <div id="presentation_teacher_hv" style=""></div>
  <div class="__dz">
    <div id="presentation_teacher_select" class="sltm" initialized="true" style="display:none"><ul><li class="first-child current">请选择老师</li><div id="presentation_teacher_select_dynamic"><% @teachers.each do |teacher| %><li class=""><%= teacher %></li><% end %></div><li class="opt_psvr_add_more">其他</li></ul></div>
  </div>
  <p><label for="presentation_teacher">老师姓名</label><br />
     <input class="text" id="presentation_teacher" name="presentation[teacher]" size="30" type="text" value="请选择老师"/>
     <input type="text" class="text" id="presentation_other_teacher" name="presentation[other_teacher]" size="30" placeholder="例: 郭懋正" value="" style="width: 273px;display: none">
  </p>
  <div id="presentation_sort1_hv" style=""></div>
  <div class="__dz">
    <div id="presentation_sort1_select" class="sltm" initialized="true" style="display:none">
      <ul>
        <li class="first-child current">请选择课件类型</li>
        <% Courseware::SORT1STR.each do |k,v| %>
        <li class=""><%= v %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <p><label for="presentation_sort1">课件类型</label><br />
     <input class="text" id="presentation_sort1" name="presentation[sort1]" size="50" type="text" value="请选择课件类型"/>
  </p>
  <p><label for="presentation_title">课件标题</label><br />
     <input class="text" id="presentation_title" name="presentation[title]" size="30" type="text" placeholder="例: 阅读与练习第1次 - 解析函数的判定"  value="<%= cookies[:presentation_pretitle] %><%= ': ' if cookies[:presentation_pretitle].present? %>"/></p>
  <%= render :partial=>'form_extras',:locals=>{:courseware=>@courseware} %>

  <p class="submit">
      <button class="primary">保存课件信息</button>
      <span class="button primary cancel">请先完成文件上传</span>
  </p>


        </div>
        <div class="secondary_info">
          <%= render 'upload' %>
        </div>
      </div>
    </section>
  <% end %>
  
  
</div>
</div>

<%= render file:'/application/footers/_sdk_footer' %>
