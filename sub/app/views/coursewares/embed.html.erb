      presentation_link: '/coursewares/<%=@courseware.id%>',
      dragging: false,
      click: 0,
      previewx: null,
      previewy: null,
      urls: [],
      slides: {
        preview: <%=raw @slides.to_json%>,
        original: <%=raw @slides.to_json%>
      },
