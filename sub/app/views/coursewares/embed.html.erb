          width  = w;
          height = w/ratio;
          top = 0;
          left = 0;
          $img.css({top:0, left:0});
        } else {
          width = max;
          height = max / ratio;
          left = (w - max) / 2;
          top = (h - height) / 2;
        }

        if (height > h + 2) {
          height = h;
          width = h * ratio;
          left = (w - width) / 2;
          top = 0;
        }
