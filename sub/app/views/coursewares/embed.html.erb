            embed = $('#embed_input').val().replace(/data-slide="\d+" /, '');

        if (source == 'slide') {
          link += '?slide=' + (Slide.current+1);
          embed = embed.replace(/class="speakerdeck-embed"/, 'class="speakerdeck-embed" data-slide="' + (Slide.current + 1) + '"');
        }
      },
