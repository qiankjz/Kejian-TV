<div class="green_header" id="verify_header">先审后发全部内容</div>
<div class="search_form">
  <%=form_tag("/cpanel/autofollow/verify", :method => "get") do%>
    <div class="search_form_row">
      <%=label_tag(:user_name, "昵称:",:style=>"margin-left:30px;")%>
      <%=text_field_tag(:user_name,nil,:style=>"width:90px;margin-right:40px;",:value=>params[:user_name])%>
      <%=label_tag(:title,"提交内容关键词:",:id=>"title_label")%>
      <%=text_field_tag(:title,nil,:style=>"width:180px;margin-right:40px;",:value=>params[:title])%>
      <%=label_tag(:content_type,"内容类型:",:style=>"margin-right:10px;")%>
      <%=select_tag :content_type,options_for_select([["全部","all"],["问题","asks"],["回答","answers"],["评论","comments"]],params[:content_type]),:onchange=>"init_text();" %>
      <button type="submit">搜索</button>
    </div>
  <% end %>
</div>
<script type="text/javascript">
  function init_text(){
    if($("#content_type").val()=="asks"){
      $("#title_label").text("问题标题关键词:");
      $("#verify_header").text("先审后发类问题");
    }else if($("#content_type").val()=="comments"){
      $("#title_label").text("评论内容关键词:");
      $("#verify_header").text("先审后发类评论");
    }else if($("#content_type").val()=="answers"){
      $("#title_label").text("回答内容关键词:");
      $("#verify_header").text("先审后发类回答");
    }else{
      $("#title_label").text("提交内容关键词:");
      $("#verify_header").text("先审后发全部内容");
    }
  }
  window.onload=init_text;
</script>