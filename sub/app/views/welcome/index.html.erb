                <td height="28" colspan="8" align="left"><h3><%=l Date.today, :format => :long%> 更新</h3></td>
              </tr>
              <tr bgcolor="#fafafa" align="center">
                <td width="5%" align="center">序号</td>
                <td width="67%" align="left">名字</td>
                <td width="9%">大小</td>
                <td width="5%">格式</td>
                <td width="6%">上传者</td>
                <td width="6%">点击量</td>
              </tr><!--seed_today-->
 

<!--seed_today-->

<%@coursewares1.each_with_index do |cw,index|%> 
