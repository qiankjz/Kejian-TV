    </div>
</div>
<div id="question-mini-list">
<% if @coursewares.count<1 %>
  您关注的资源没有新动态，去<%= link_to '资源广场','/welcome/featured' %>关注更多内容吧！
<% else %>
<% @coursewares.each do |item|%>
<div class="question-summary narrow" id="question-summary-10939">
    <div onclick="window.location.href='/coursewares/<%= item.id %>'" class="cp">
        <div class="votes">
            <div class="mini-counts"><%= item.views_count %></div>
            <div>点击</div>
        </div>
        <div class="status unanswered">
            <div class="mini-counts"><%= item.files_count %></div>
            <div>文件</div>
        </div>
        <div class="views">
            <div class="mini-counts"><%= item.downloads_count %></div>
            <div>下载</div>
        </div>
    </div>
    <div class="summary">
        
        <h3><a href="/coursewares/<%= item.id %>" class="question-hyperlink" title="<%= item.desc %>"><%= item.title %></a></h3>
        <div class="tags t-nutrition">
          <% if item.teacher.present? %>
            <a href="/teachers/<%= item.teacher_typeid %>" class="post-tag" title="<%= item.teacher %>" rel="tag"><%= item.teacher %></a> 
          <% end %>
          <% if nn=Course.get_name(item.course_fid) %>
            <a href="/courses/<%= item.course_fid %>" class="post-tag" title="<%= nn %>" rel="tag"><%= nn %></a> 
            <% if nd=Course.get_department(item.course_fid) and ndid = Department.get_fid(nd) %>
              <a href="/departments/<%= ndid %>" class="post-tag" title="<%= nd %>" rel="tag"><%= nd %></a> 
            <% end %>
          <% end %>
        </div>
        <div class="started">
            <a href="/coursewares/<%= item.id %>" class="started-link"><%= timeago(item.created_at,:span=>true) %></a>
            <a href="/users/<%= User.get_slug item.uploader_id %>"><%= User.get_name item.uploader_id %></a> <span class="reputation-score" title="reputation score" dir="ltr"><%= User.get_reputation(item.uploader_id) %></span>
        </div>
    </div>
</div>
<% end %>
<% end %>
</div>

</div>
