<% else %>
<% @coursewares.each do |item|%>
  <div id="question-summary-10960" class="question-summary">
      <div class="statscontainer __sdk">
        <div class="presentations">
          <%= render :partial => 'cw',:locals=>{courseware:item,version:item.version,courseware_id:item.ktvid} %>
        </div>
      </div>
      <div class="summary">        
          <h3>
            <% if nn=Course.get_name(item.course_fid) %>
              <a href="/simple/forum.php?mod=forumdisplay&fid=<%= item.course_fid %>" class="post-tag" title="<%= nn %>" rel="tag"><%= nn %></a> 
              <% nd=Course.get_department(item.course_fid) %>
            <% end %>
            <a href="/coursewares/<%= item.id %>" class="question-hyperlink" title="<%= item.desc %>">
            <%= item.title %>
            </a>
          </h3>
          <div class="excerpt">
            <% 
            arr=[]
            arr<<item.filesort_mundane if item.filesort_mundane
            arr<<"共#{number_with_delimiter item.slides_count}页" if item.slides_count>0
            arr<<"#{number_with_delimiter item.words_count}字" if item.words_count>0
            %>
            <%= arr.blank? ? item.fileinfo : arr.join(', ')+'.' %>
            <% 
            arr=[]
            arr<<"作者创作时间投入: #{item.human_time_human(:very_short => true)}" if item.human_time>0
            arr<<"最终完稿于: #{item.finished_at.strftime('%Y年%m月%d日 %H:%M:%S')}" if item.finished_at
            %>
            <% unless arr.blank? %>
              <br><%= arr.join(', ')+'.' %>
            <% end %>
          </div>

          <div class="tags t-nutrition">
            <% if false and item.teacher.present? %>
              <!-- todo -->
              <a href="/teachers/<%= item.teacher_typeid %>" class="post-tag" title="<%= item.teacher %>" rel="tag"><%= item.teacher %></a> 
            <% end %>
            <% if false and nd %>
              <!-- todo -->
              <a href="/departments/<%= item.course_fid %>" class="post-tag" title="<%= nd %>" rel="tag"><%= nd %></a> 
            <% end %>
          </div>
          <div class="started fr">


      <div class="user-info ">
          <div class="user-action-time">
            上传于<%= timeago(item.created_at,:span=>true) %>
          </div>
          <div class="user-gravatar32">
              <a href="/users/454/oliver-c"><div class="">
                <img width="32" height="32" alt="" src="<%= avatar_url_quick(item.uploader_id,:small30) %>">
              </div></a>
          </div>
          <div class="user-details">
            <a href="/users/<%= User.get_slug item.uploader_id %>"><%= User.get_name item.uploader_id %></a><br>
              <span dir="ltr" title="reputation score 26521" class="reputation-score">26.5k</span><span title="2 gold badges"><span class="badge1"></span><span class="badgecount">2</span></span><span title="95 silver badges"><span class="badge2"></span><span class="badgecount">95</span></span><span title="168 bronze badges"><span class="badge3"></span><span class="badgecount">168</span></span>
          </div>
      </div>

          </div>  
      </div>
  </div>
  
  <% end %>
<% end %>  
</div>
