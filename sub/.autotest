class Autotest
  # run tests over drb server (spork)
  def make_test_cmd files_to_test
    if files_to_test.empty?
      return "echo nothing to do"
    else
      p str="bundle exec testdrb #{files_to_test.keys.join(' ')}"
      return "echo #{str}"
    end
  end
=begin
    if files_to_test.empty?
      "" # no tests to run
    else
      "bundle exec testdrb #{files_to_test.keys.join(' ')}"
    end
  end
=end
end
