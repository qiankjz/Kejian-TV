<p>
  <input type="checkbox" value="1" name="presentation[have_version_date]" id="presentation_have_version_date" readonly="readonly" <%= 'checked="checked"' if courseware.version_date[courseware.version.to_s].present? %> >&nbsp;<label for="presentation_have_version_date">标记课件版本</label>

  <span class="details" id="presentation_version_date_details" style="display: none;">
     <label for="presentation_version_date">，本课件的使用日期为:</label>
     <input type="text" value="<%= courseware.version_date[courseware.version.to_s]%>" size="48" name="presentation[version_date]" id="presentation_version_date" class="datepicker publish-date hasDatepicker">
  </span>
</p>
  <% content_for :butt2 do %>
    $('#presentation_have_version_date').on('change',function(){
      if(this.checked){
        $('#presentation_version_date_details').show();
      }else{
        $('#presentation_version_date_details').hide();
      }
    });
    $('#presentation_have_version_date').trigger('change');
    $('#presentation_have_version_date').removeAttr('readonly');
    $('#presentation_version_date').click(function(){
      JTC.setday({format:'yyyy年MM月dd日', readOnly: true});
    });
  <% end %>    


