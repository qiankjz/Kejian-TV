<li>
  <div class="mute">
    <a href="#" rel="tipsyt" title="不感兴趣" onclick="return Users.mute_suggest_item(this,'User','<%= follower.id %>');"></a>
  </div>
  <div class="info clearfix">
    <div class="item">
      <div class="left">
        <%= user_avatar_tag(follower,:mid) %>
      </div>
      <div class="right">
        <p><%= user_name_tag(follower) %></p>
        <p class="tagline"><%= truncate(follower.tagline,:length => 9, :truncate_string =>"…") %></p>
      </div>
    </div>
    <div class="action">
      <% if current_user.followed?(follower) %>
      <a class="bBtn bBtnUnFocus small" href="#" onclick="return Users.unfollow(this, '<%= follower.slug %>','small');">取消</a>
      <% else %>
      <a class="bBtn bBtnFocus small" href="#" onclick="return Users.follow(this, '<%= follower.slug %>','small');">关注</a>
      <% end %>

    </div>
  </div>
</li>
