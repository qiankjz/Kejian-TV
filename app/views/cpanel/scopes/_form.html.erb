<%= form_for([:cpanel,@scope]) do |f| %>

  <% if @scope.errors.any? %>
    <div id="error_explanation">
      <div>请修正以下错误:</div>
      <ul>
      <% @scope.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name,'范畴名称' %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :values,'授权内容' %> (请用空格间隔)<br />
    <input id="scope_values" class="tags" name="scope[values]" size="30" type="text" value="<%=@scope.values.join(" ") if @scope.values%>">
  </div>

  <div class="actions">
    <%= f.submit '提交', {class: "button" } %>
  </div>
<% end %>
