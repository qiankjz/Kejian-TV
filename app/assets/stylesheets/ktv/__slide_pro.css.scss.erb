.__slide{
	.clearfix {
		zoom:1
	}
	.clearfix:before,.clearfix:after {
		content:"";
		display:table
	}
	.clearfix:after {
		clear:both
	}
	.hide-text {
		overflow:hidden;
		text-indent:100%;
		white-space:nowrap
	}
	.input-block-level {
		-moz-box-sizing:border-box;
		-ms-box-sizing:border-box;
		-webkit-box-sizing:border-box;
		box-sizing:border-box;
		display:block;
		min-height:28px;
		width:100%
	}
	.notice.zipcast-message {
		-moz-border-radius:0 0 5px 5px;
		-webkit-border-radius:0 0 5px 5px;
		border-radius:0 0 5px 5px;
		border-top:2px solid #AAA;
		font-size:14px
	}
	.icon {
		background:url(<%=asset_path('slide/public.slidesharecdn.com/images/pro-preview-icons.png')%>);
		display:block;
		height:38px;
		margin:7px auto 0;
		width:48px
	}
	.back-to-top {
		-moz-border-radius:5px;
		-webkit-border-radius:5px;
		border:1px #999 dashed;
		border-radius:5px;
		bottom:14px;
		color:#777;
		display:inline-block;
		font-size:13px;
		left:414px;
		line-height:15px;
		padding:4px 9px;
		position:relative;
		text-decoration:none
	}
	.back-to-top:hover {
		color:#777;
		text-decoration:none
	}
	.leads {
		background-position:-50px 0
	}
	.meetings {
		background-position:-100px 0
	}
	.linkedin {
		background-position:-147px 0
	}
	.display {
		background-position:-197px 0
	}
	.benefits {
		background-position:-242px 0
	}
	.feature:hover .icon.analytics {
		background-position:0 -40px
	}
	.feature:hover .icon.leads {
		background-position:-50px -40px
	}
	.feature:hover .icon.meetings {
		background-position:-100px -40px
	}
	.feature:hover .icon.linkedin {
		background-position:-147px -40px
	}
	.feature:hover .icon.display {
		background-position:-197px -40px
	}
	.feature:hover .icon.benefits {
		background-position:-242px -40px
	}
	.feature.active .icon.analytics {
		background-position:0 -40px
	}
	.feature.active .icon.leads {
		background-position:-50px -40px
	}
	.feature.active .icon.meetings {
		background-position:-100px -40px
	}
	.feature.active .icon.linkedin {
		background-position:-147px -40px
	}
	.feature.active .icon.display {
		background-position:-197px -40px
	}
	.feature.active .icon.benefits {
		background-position:-242px -40px
	}
	.ss-logo {
		background-position:-317px 0
	}
	.feature.active .icon.ss-logo {
		background-position:-317px -40px
	}
	.feature:hover .icon.ss-logo {
		background-position:-317px -40px
	}
	.screenshot img {
		-moz-border-radius:5px;
		-moz-box-shadow:0 0 6px 1px #CCC;
		-webkit-border-radius:5px;
		-webkit-box-shadow:0 0 6px 1px #CCC;
		border:1px solid #DDD;
		border-radius:5px;
		box-shadow:0 0 6px 1px #CCC;
		margin:4px;
		width:650px
	}
	.screenshot {
		margin:24px auto 14px;
		position:relative;
		width:650px
	}
	.screenshot .caption {
		background:#555;
		bottom:0;
		color:#FFF;
		opacity:.7;
		position:absolute;
		width:652px;
		z-index:1
	}
	.screenshot .caption p {
		padding:8px 10px
	}
	.feature {
		-moz-transition:background-color .3s linear;
		-ms-transition:background-color .3s linear;
		-o-transition:background-color .3s linear;
		-webkit-transition:background-color .3s linear;
		background:#F3F2EC;
		border:1px solid #DDD;
		border-right:none;
		color:#777;
		float:left;
		font-size:13px;
		font-weight:400;
		height:77px;
		line-height:29px;
		margin-bottom:-1px;
		padding:5px 5px 0;
		position:relative;
		text-align:center;
		transition:background-color .3s linear;
		width:145px
	}
	.feature.active {
		background:#FFF;
		border-bottom:1px solid #fff;
		box-shadow:0 4px 16px -4px rgba(220,223,222,0.58) inset
	}
	.feature:hover {
		-moz-transition:background-color .3s linear;
		-ms-transition:background-color .3s linear;
		-o-transition:background-color .3s linear;
		-webkit-transition:background-color .3s linear;
		background:#fff;
		border-right:none;
		box-shadow:0 4px 16px -4px rgba(220,223,222,0.58) inset;
		transition:background-color .3s linear
	}
	.feature-wrapper {
		background:#FFF;
		border:#DDDCD7 1px solid;
		border-radius:5px 5px 5px 5px;
		display:block;
		margin:0 0 30px 20px;
		overflow:hidden;
		padding:15px 0 0;
		text-align:center;
		width:938px
	}
	.feature:first-child {
		border-radius:5px 0 0 0
	}
	.feature:last-child {
		border-radius:0 5px 0 0;
		border-right:1px solid #d6d6d6
	}
	.withtabs .feature-wrapper {
		-moz-border-radius:0 0 5px 5px;
		-webkit-border-radius:0 0 5px 5px;
		border-radius:0 0 5px 5px
	}
	.feature-wrapper h1 {
		font-size:36px;
		margin:20px 0 28px
	}
	.feature-wrapper .details {
		border-top:1px solid #DDD;
		display:block;
		height:300px;
		margin:20px 42px;
		padding:30px 14px
	}
	.feature-wrapper .details img {
		float:left
	}
	.feature-wrapper .details .feature-text {
		float:right;
		margin:0 auto;
		padding:0 10px 0 16px;
		text-align:left;
		width:314px
	}
	.feature-wrapper .details.even img {
		float:right
	}
	.feature-wrapper .details.even .feature-text {
		float:left
	}
	.feature-text p {
		color:#777;
		font-size:16px;
		line-height:24px
	}
	.feature-text h2 {
		line-height:29px;
		margin-bottom:10px
	}
	.cta {
		background-color:#eee;
		border-top:1px solid #FFF;
		box-shadow:0 0 11px -3px;
		height:34px;
		margin:0 auto;
		padding:14px 58px 17px;
		width:822px
	}
	.feature-text ul {
		clear:both;
		margin:15px 0 0 1px;
		text-align:left
	}
	.feature-text li {
		background:url(<%=asset_path('slide/public.slidesharecdn.com/images/tick-features.png')%>) no-repeat left top;
		font-size:16px;
		line-height:20px;
		list-style-type:none;
		margin:10px 0;
		padding:0 0 0 30px
	}
	.feature-text .btn {
		clear:left;
		margin-top:10px
	}
	.feature-text .muted {
		margin-top:22px;
		padding-right: 237px
	}
}